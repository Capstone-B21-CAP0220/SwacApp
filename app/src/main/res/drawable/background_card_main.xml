<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/grey_lighter"/>
      <corners android:radius="15dp" />
    </shape>
  </item>

  <item
      android:left="0dp"
      android:right="1dp"
      android:top="0dp"
      android:bottom="2dp">
    <shape android:shape="rectangle">
      <solid android:color="@color/blue_secondary"/>
      <corners android:radius="15dp" />
    </shape>
  </item>
</layer-list>
