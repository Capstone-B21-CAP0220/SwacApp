<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bottom_nav"
    android:maxHeight="100dp"
    android:paddingHorizontal="16dp">

    <ImageView
        android:id="@+id/btn_home"
        android:layout_marginEnd="32dp"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        app:layout_constraintBottom_toBottomOf="@+id/btn_lapor"
        app:layout_constraintEnd_toStartOf="@+id/btn_lapor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_lapor"
        android:layout_marginTop="32dp"/>

    <ImageView
        android:id="@+id/btn_lapor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/blue_secondary"
        android:src="@drawable/ic_button_lapor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_information"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_info"
        app:layout_constraintBottom_toBottomOf="@+id/btn_lapor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_lapor"
        app:layout_constraintTop_toTopOf="@+id/btn_lapor" />


</androidx.constraintlayout.widget.ConstraintLayout>